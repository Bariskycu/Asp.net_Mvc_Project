@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Wolksvagen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IPagedList<CarShop.Models.Urun>
<div class="gallery">
    <div class="container">
        <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
            <a href=""><img src="~/Content/images/Volkswagen.png" alt="Örnek Resim" /></a>
            
        </div>
        <div class="gallery-info">
            @foreach (var urunler in Model)
            {
                <div class="col-md-3 gallery-grid wow flipInY animated" data-wow-delay=".5s">
                    <a href="/Urun/Detay/@urunler.UrunId"><img src="@urunler.ResimYol" class="img-responsive" alt="" /></a>
                    <div class="gallery-text simpleCart_shelfItem">
                        <h5><a class="name" href="/Urun/Detay/@urunler.UrunId">@urunler.Baslik</a></h5>
                        <p><span class="item_price">@urunler.Fiyat TL</span></p>
                    </div>
                </div>
            }
            <div class="clearfix"></div>
        </div>
        <div class="pagedList">
            @Html.PagedListPager(Model, page => Url.Action("Wolksvagen", new { page }));
        </div>
    </div>
</div>

