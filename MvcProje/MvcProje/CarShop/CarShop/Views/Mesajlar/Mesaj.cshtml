
@{
    ViewBag.Title = "Mesaj";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="contact">
    <div class="container">
        <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
            <h3 class="title">Bilgi almak için bize yazın<span> </span></h3>
            <p> </p>
        </div>

    </div>
</div>
<div class="address">
    <!--address-->
    <div class="container">
        <div class="address-row">
            <div class="col-md-6 address-left wow fadeInLeft animated" data-wow-delay=".5s">
                <div class="address-grid">
                    <h4 class="wow fadeIndown animated" data-wow-delay=".5s">Bize bir mesaj bırakın </h4>
                    <form action="/Mesajlar/Mesaj" method="post">
                        <input class="wow fadeIndown animated" data-wow-delay=".6s" name="ad" type="text" placeholder="Ad" required="">
                        <input class="wow fadeIndown animated" data-wow-delay=".7s" name="soyad" type="text" placeholder="Soyad" required="">
                        <input class="wow fadeIndown animated" data-wow-delay=".8s" name="telefon" type="text" placeholder="Telefon" required="">
                        <input class="wow fadeIndown animated" data-wow-delay=".8s" name="email" type="text" placeholder="Email" required="">
                        <textarea class="wow fadeIndown animated" data-wow-delay=".8s" name="mesaj" placeholder="Mesaj" required=""></textarea>
                        <input class="wow fadeIndown animated" data-wow-delay=".9s" type="submit" value="Gönder">
                    </form>
                </div>
            </div>
            <div class="col-md-6 address-right">
                <div class="address-info wow fadeInRight animated" data-wow-delay=".5s">
                    <h4>Adres</h4>
                    <p>123 San Sebastian, CG 09-123 Ba,Block(#456),Hill Towers 4567 New York City USA.</p>
                </div>
                <div class="address-info address-mdl wow fadeInRight animated" data-wow-delay=".7s">
                    <h4>Telefon </h4>
                    <p>+222 111 333 4444</p>
                    <p>+222 111 333 5555</p>
                </div>
                <div class="address-info wow fadeInRight animated" data-wow-delay=".6s">
                    <h4>MAIL</h4>
                    <p><a href="mailto:example@mail.com"> mail@example.com</a></p>
                    <p><a href="mailto:example@mail.com"> mail2@example.com</a></p>
                </div>
            </div>
        </div>
    </div>
</div>


