@model IEnumerable<CarShop.Models.AracTalip>

@{
    ViewBag.Title = "AraçTalepleri";
    Layout = "~/Views/Shared/Yönetim.cshtml";
}

<h2>Araç Satın Almak İsteyenler</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Arac)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mesaj)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Arac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soyad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mesaj)
        </td>
        <td>
            @Html.ActionLink("Delete", "TalepDelete", new { id = item.AracTalipId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
